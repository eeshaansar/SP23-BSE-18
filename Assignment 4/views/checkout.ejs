<div class="container mt-5">
    <h2>Checkout</h2>
    
    <h3>Your Cart</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% let totalAmount = 0; %>
            <% cart.forEach(item => { %>
                <tr>
                    <td><img src="<%= item.image %>" alt="<%= item.name %>" style="width: 50px; height: 50px;"> <%= item.name %></td>
                    <td>$<%= item.price %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= item.price * item.quantity %></td>
                </tr>
                <% totalAmount += item.price * item.quantity; %>
            <% }) %>
        </tbody>
    </table>

    <h4>Total Amount: $<%= totalAmount %></h4>

    <h3>Shipping Information</h3>

    <a href="/user/login" class="btn btn-success mt-3">Checkout</a>
</div>

<%- contentFor("checkout") %>
