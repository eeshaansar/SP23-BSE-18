<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/admin/categories/create" method="post"enctype="multipart/form-data"  class="mt-5">
                <div class="mb-3">
                    <label for="name" class="form-label">Category Name</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Enter category name">
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Category Image</label>
                    <input type="file" name="image" class="form-control" id="image" accept="image/*">
                </div>
                
            
                <div class="d-flex flex-column justify-content-center align-items-center gap-3">
                    <button type="submit" class="btn btn-dark w-100">Add Category</button>
                    <button class="btn btn-danger btn-lg" type="button" onclick="window.location.href='/admin/categories/read';">Back</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- contentFor("addcategory")%>
